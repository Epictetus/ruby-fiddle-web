.container.riddle
  .row
    .five.columns
      %ul.block-grid.three-up
        %li
          -if @riddle.persisted?
            =link_to "#", :id=>"update_riddle", "data-update-url" => url_for(@riddle), :class=> "white small radius button" do
              %i.icon-edit.icon-large
              Update
          -else
            =link_to "#", :id=>"save_riddle", :class=> "white small radius button" do
              %i.icon-edit.icon-large
              Save
        %li
          =link_to "#", :id=>"fork_riddle", "data-reveal-id" => "coming-soon",:class=> "white small radius button" do
            %i.icon-share.icon-large
            Fork
  .row
    .five.columns
      =render partial: "form"

    .seven.columns
      #riddle_result
