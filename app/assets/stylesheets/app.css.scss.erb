@import url(http://fonts.googleapis.com/css?family=Ubuntu);
@import url(http://fonts.googleapis.com/css?family=PT%20Mono);
body {
  background: url("<%= asset_path('furley_bg.png') %>");
  font-family: 'Ubuntu', sans-serif;
}

.riddle {
  font-family: "Monaco", "Ubuntu", sans-serif;
  textarea{
    font-family: "PT Mono", "courier", fixed;
    height: 400px;
  }
  .alert-box {
    font-family: Arial, sans-serif;
  }
}

#riddle_form{
  textarea {
    background: #111111;
    color: #ffffff;
    border: 2px solid #ccc;
  }
  input, textarea, small{
    width: 100%;
  }
}


footer {
  margin-top: 60px;
  .row{
    padding-top: 3em;
    border-top: 1px solid #ccc;
  }
}
